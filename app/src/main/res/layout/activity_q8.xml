<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.android.tarantinoquiz.Q8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/ImageQuestionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/q8" />

        <TextView
            style="@style/TextQuestionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q8_text" />

        <RadioGroup
            style="@style/RadioQuestionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q8_1_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkQ8"
                android:text="@string/q8_1" />

            <RadioButton
                android:id="@+id/q8_2_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkQ8"
                android:text="@string/q8_2" />

            <RadioButton
                android:id="@+id/q8_3_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkQ8"
                android:text="@string/q8_3" />

            <RadioButton
                android:id="@+id/q8_4_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkQ8"
                android:text="@string/q8_4" />
        </RadioGroup>

        <Button
            style="@style/NextQuestionButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToQ9"
            android:text="@string/NextQuestionButton" />

    </LinearLayout>

</ScrollView>
